<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>

    <div class="all-blogs">
      <h2>All blogs</h2>
      <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>
      <a href="/blogs/<%= blog._id  %> "> <h3><%= blog.title %></h3></a>
      <p><%= blog.snippet %></p>
      <% }) %> <% }else { %>

      <p>No Blogs</p>
      <% } %> <%- include('./partials/footer.ejs') %>
    </div>
  </body>
</html>
